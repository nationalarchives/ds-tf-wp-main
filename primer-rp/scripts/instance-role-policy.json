{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::${s3_deployment_bucket}/",
                "arn:aws:s3:::ds-transfer-karl"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::${s3_deployment_bucket}//${s3_deployment_root}/*",
                "arn:aws:s3:::ds-transfer-karl/*"
            ]
        }
    ]
}
